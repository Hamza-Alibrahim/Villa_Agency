extends prop
block links
  ul.links
    li
      a(href="../index.html") Home
    li
      a(href="prop.html") Properties
    li
      a(href="details.html") Property Details
    li.active
      a(href="cont.html") Contact Us
    li.visit
      a(href="#")
        <i class="fa fa-calendar"></i> 
        span Schedule a visit
block page-data
  .cont
    .container
      .row-1
        .info
          h4 | CONTACT US
          h2 Get In Touch With Our Agents
          p When you really need to download free CSS templates, please remember our website TemplateMo. Also, tell your friends about our website. Thank you for visiting. There is a variety of Bootstrap HTML CSS templates on our website. If you need more information, please contact us.
          .row 
            .box
              img(src="../imgs/phone-icon.png")
              .info
                span 010-020-0340
                span Phone Number
            .box
              img(src="../imgs/email-icon.png")
              .info
                span info@villa.co
                span Business Email
        form.col
          label(for="name") Full Name
          input(type="text",id="name",name="Name",placeholder="Your Name...",required)
          label(for="email") Email Address
          input(type="email",id="email",name="Email",placeholder="Your E-mail...",required)
          label(for="subject") Subject
          input(type="text",id="subject",name="Subject",placeholder="Subject...")
          label(for="message") Message
          textarea(type="text",id="message",name="Message",placeholder="Message...")
          button(type="submit") Send Message
